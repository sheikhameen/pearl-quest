generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Question {
  id         String     @id @default(auto()) @map("_id") @db.ObjectId
  title      String
  answers    String[]
  difficulty Difficulty @default(EASY)
}

enum Difficulty {
  EASY
  MEDIUM
  HARD
}
